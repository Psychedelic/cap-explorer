{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@stitched": ["stitches.config"],
      "@components/*": ["components/*"],
      "@images/*": ["images/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@fonts/*": ["fonts/*"],
      "@views/*": ["views/*"],
      "@agentjs": ["agent.ts"],
    },
  },
  "include": [
    "src/**/*"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ],
  "exclude": [
    ".storybook",
    "node_modules"
  ]
}
